<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".KonfirmMenu.SelamatDatang">

    <ImageView
        android:layout_width="380dp"
        android:layout_height="380dp"
        android:src="@drawable/anim1"
        android:padding="20dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selamat Datang"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kami hadir dengan memberikan layanan untuk memudahkan masyarakat"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mulai"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="     Mulai"
        android:textSize="20sp"
        android:fontFamily="sans-serif"
        android:shadowRadius="3"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="130dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:drawableRight="@drawable/baseline_arrow_forward_24"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:backgroundTint="@color/greendark"/>

</LinearLayout>