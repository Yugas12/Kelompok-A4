<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".KonfirmMenu.BerhasilDaftar">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Berhasil Daftar"
        android:textSize="35sp"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/anim4"
        android:layout_marginTop="100dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Akun yang telah dimasukkan berhasil terdaftar pada aplikasi"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textAlignment="center"/>

    <com.google.android.material.button.MaterialButton
    android:id="@+id/button_lanjut"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:text="Kembali ke Halaman Login"
    android:textSize="16sp"
        android:layout_marginTop="50dp"
    android:shadowRadius="3"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:textAllCaps="false"
    android:textColor="@color/white"
    style="@style/Widget.MaterialComponents.Button.TextButton"
    android:backgroundTint="@color/greendark"/>
</LinearLayout>